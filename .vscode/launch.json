  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/todo-api/node_modules/mocha/bin/_mocha",
      "outputCapture": "std",
      "env": {
        "PORT": "3001",
        "NODE_ENV": "development",
        "LOG_LEVEL": "silent"
      },
      "args": [
        "${workspaceFolder}/todo-api/test"
      ],
      "cwd": "${workspaceFolder}/todo-api",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
